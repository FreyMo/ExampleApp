<Window x:Class="ViewLayer.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:res="clr-namespace:ViewLayer.Resources"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mainViewModel="clr-namespace:ViewModelLayer.Main;assembly=ViewModelLayer"
        xmlns:t="clr-namespace:ViewLayer.Translation.MarkupExtensions"
		xmlns:locator="clr-namespace:ViewLayer.ViewModelLocator"
        mc:Ignorable="d"
		Style="{StaticResource WindowStyle}"
		Title="{x:Static res:Resources.MainWindowTitle}" Height="350" Width="525"
		DataContext="{locator:ViewModelLocator ViewModelType={x:Type mainViewModel:IMainWindowViewModel}}">

	<Window.Resources>
		<ResourceDictionary Source="../DataTemplates/CultureInfoTemplate.xaml" />
	</Window.Resources>

	<StackPanel>
		<Button Margin="0,40,0,0" Content="{t:TranslatableText ButtonText}"/>

		<ComboBox ItemsSource="{t:TranslatableEnums {x:Type mainViewModel:TestEnum}}"
		          SelectedValue="{Binding SelectedNumber, Mode=TwoWay}" />

		<ComboBox ItemsSource="{Binding Path=Cultures}"
				  SelectedItem="{Binding SelectedCulture, Mode=TwoWay}"
				  ItemTemplate="{StaticResource CultureInfoTemplate}" />
	</StackPanel>

</Window>